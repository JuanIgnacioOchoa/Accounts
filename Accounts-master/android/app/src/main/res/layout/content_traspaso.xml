<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lala.Traspaso"
    tools:showIn="@layout/activity_traspaso">

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/traspaso_spFrom"
        android:layout_below="@+id/traspaso_etCantidad"
        android:layout_alignStart="@+id/traspaso_spTo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From:"
        android:id="@+id/textView2"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:layout_alignTop="@+id/traspaso_spFrom"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/traspaso_spFrom"
        android:layout_alignEnd="@+id/space" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/traspaso_spTo"
        android:layout_below="@+id/res_from"
        android:layout_alignEnd="@+id/traspaso_etComment" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:hint="Comentario o descripcion"
        android:gravity="center"
        android:backgroundTint="#FFFFFF"
        android:id="@+id/traspaso_etComment"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="49dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/segmented3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To:"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/traspaso_spTo"
        android:layout_alignBottom="@+id/traspaso_spTo"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:textSize="20dp" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_above="@+id/traspaso_etComment"
        android:id="@+id/space"
        android:layout_alignStart="@+id/traspaso_spTo" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_above="@+id/traspaso_spTo"
        android:layout_centerHorizontal="true"
        android:id="@+id/space2" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_above="@+id/traspaso_spFrom"
        android:id="@+id/space3" />

    <EditText
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:id="@+id/traspaso_etCantidad"
        android:hint="Cantidad $$"
        android:inputType="number|numberDecimal"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/traspaso_spFrom"
        android:layout_below="@+id/traspaso_spFrom"
        android:id="@+id/res_from"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/traspaso_spTo"
        android:layout_below="@+id/traspaso_spTo"
        android:id="@+id/res_to"
        android:visibility="invisible"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/res_to"
        android:visibility="invisible"
        android:layout_below="@id/res_to"
        android:hint="1.0"
        android:inputType="number|numberDecimal"
        android:id="@+id/etCambio"/>


    <TextView
        android:id="@+id/tvCambio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/res_to"
        android:layout_alignBottom="@id/etCambio"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/etCambio"
        android:gravity="center_vertical"
        android:text="Tipo de Cambio"
        android:textSize="20dp"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/traspaso_tvMoneda"
        android:text="MXN"
        android:layout_alignBottom="@+id/traspaso_etCantidad"
        android:layout_alignEnd="@+id/traspaso_spFrom"
        android:layout_alignTop="@+id/traspaso_etCantidad"
        android:layout_toEndOf="@+id/traspaso_etCantidad"
        android:textSize="30dp"
        android:gravity="center_vertical"/>

    <info.hoang8f.android.segmented.SegmentedGroup
        xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
        android:id="@+id/segmented3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        segmentedgroup:sc_border_width="2dp"
        segmentedgroup:sc_corner_radius="20dp"
        android:layout_below="@+id/etCambio"
        android:weightSum="3"
        >

        <RadioButton
            android:id="@+id/hoyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoy"
            style="@style/RadioButton"
            android:layout_weight="1"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/ayerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ayer"
            style="@style/RadioButton"
            android:layout_weight="1"
            />


        <RadioButton
            android:id="@+id/otroBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Otro"
            style="@style/RadioButton"
            android:layout_weight="1"
            />
    </info.hoang8f.android.segmented.SegmentedGroup>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/trasp_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/check"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_alignBottom="@+id/traspaso_etComment"
        android:layout_alignEnd="@+id/traspaso_spTo" />



</RelativeLayout>
