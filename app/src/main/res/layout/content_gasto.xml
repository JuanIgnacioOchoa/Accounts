<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lala.Gasto"
    tools:showIn="@layout/activity_gasto">

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/gasto_spFrom"
        android:layout_below="@+id/gasto_etCantidad"
        android:layout_toEndOf="@+id/space2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuenta:"
        android:id="@+id/textView2"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:layout_below="@+id/gasto_etCantidad"
        android:layout_alignBottom="@+id/gasto_spFrom"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/gasto_spFrom" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/gasto_spTo"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignEnd="@+id/gasto_spFrom"
        android:layout_toEndOf="@+id/textView3" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:hint="Comentario o descripcion"
        android:gravity="center"
        android:backgroundTint="#FFFFFF"
        android:id="@+id/gasto_etComment"
        android:layout_below="@+id/new_move_otro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motivo:"
        android:id="@+id/textView3"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:layout_below="@+id/gasto_spFrom"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/gasto_spFrom" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_move_otro"
        android:hint="  Motivo"
        android:layout_below="@+id/gasto_spTo"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/gasto_spTo" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_above="@+id/gasto_etComment"
        android:layout_alignStart="@+id/new_move_otro"
        android:id="@+id/space" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_above="@+id/gasto_spTo"
        android:layout_centerHorizontal="true"
        android:id="@+id/space2" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_above="@+id/gasto_spFrom"
        android:id="@+id/space3" />

    <EditText
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:id="@+id/gasto_etCantidad"
        android:hint="Cantidad $$"
        android:inputType="number|numberDecimal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gasto_spMoneda"
        android:layout_alignBottom="@+id/gasto_etCantidad"
        android:layout_toEndOf="@+id/gasto_etCantidad" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/gasto_spTo"
        android:layout_alignStart="@id/gasto_spTo"
        android:layout_alignTop="@id/textView2"
        android:layout_alignBottom="@id/textView2"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:id="@+id/TVPersona"/>


</RelativeLayout>
