<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.lala.MainActivity">

    <Button
        android:id="@+id/MVer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Ver" />

    <Button
        android:id="@+id/MMovimiemto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MIngreso"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="Movimiento" />

    <Button
        android:id="@+id/MIngreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MGasto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Ingreso" />

    <Button
        android:id="@+id/MGasto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MVer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Gasto" />
</RelativeLayout>
