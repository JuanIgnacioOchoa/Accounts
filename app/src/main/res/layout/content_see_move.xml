<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lala.seeMove"
    tools:showIn="@layout/activity_see_move">

    <EditText
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/see_move_etCantidad"
        android:hint="Cantidad $$"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/see_move_spMoneda"
        android:layout_alignBottom="@+id/see_move_etCantidad"
        android:layout_toEndOf="@+id/see_move_etCantidad" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_above="@+id/see_move_spCuenta"
        android:id="@+id/space3" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/see_move_spCuenta"
        android:layout_below="@+id/see_move_etCantidad"
        android:layout_alignEnd="@+id/see_move_spMoneda" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuenta:"
        android:id="@+id/textView2"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:layout_below="@+id/see_move_etCantidad"
        android:layout_alignParentStart="true" />
    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_above="@+id/see_move_spMotivo"
        android:layout_centerHorizontal="true"
        android:id="@+id/space2" />
    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/see_move_spMotivo"
        android:layout_below="@+id/see_move_spCuenta"
        android:layout_alignStart="@+id/see_move_spCuenta" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motivo:"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/see_move_spMotivo"
        android:layout_alignBottom="@+id/see_move_spMotivo"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:textSize="20dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/see_move_otro"
        android:hint="  Motivo"
        android:layout_below="@+id/see_move_spMotivo"
        android:layout_alignEnd="@+id/see_move_spMotivo"
        android:layout_toEndOf="@+id/space2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de Cambio"
        android:id="@+id/see_move_tvCambio"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:layout_alignTop="@+id/see_move_Tipo_de_cambio"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/see_move_Tipo_de_cambio"
        android:layout_toStartOf="@+id/see_move_spMotivo" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/see_move_Tipo_de_cambio"
        android:layout_below="@+id/see_move_otro"
        android:layout_alignStart="@+id/space2"
        android:layout_alignParentEnd="true" />
    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_above="@+id/see_move_etComment"
        android:layout_alignStart="@+id/see_move_otro"
        android:id="@+id/space" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:hint="Comentario o descripcion"
        android:gravity="center"
        android:backgroundTint="#FFFFFF"
        android:id="@+id/see_move_etComment"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/space3"
        android:layout_below="@+id/see_move_date" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/see_move_date"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/see_move_etComment"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
