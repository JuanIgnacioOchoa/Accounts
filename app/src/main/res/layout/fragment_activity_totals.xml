<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/fragment_activity_event_swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accounts_"
                android:layout_alignParentTop="true"
                android:id="@+id/tvTitleA"
                android:textColor="#000000"
                android:textSize="20dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relative1"
                android:layout_below="@id/tvTitleA">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear1"
                    >
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cbActiva"
                        android:text="Mostrar inactivos"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_below="@id/linear1"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/tvPos"
                        android:text="1,000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/tvNeg"
                        android:text="2,000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/tvSum"
                        android:text="3,000"/>
                </LinearLayout>
            </RelativeLayout>
            <ListView
                android:id="@+id/listView_Totals"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/relative1"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tvHintAcc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/hint_no_accounts"
                android:maxLines="5"
                android:lines="2"
                android:paddingTop="30dp"
                android:visibility="gone"
                android:layout_below="@id/relative1"
                android:layout_gravity="center" />


        </RelativeLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>




</FrameLayout>