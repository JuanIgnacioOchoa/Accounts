<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/lv_see_cuentas_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/lv_see_cuentas_fecha"
        android:layout_below="@+id/lv_see_cuentas_id"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/lv_sse_cuentas_cant"
        android:layout_below="@+id/lv_see_cuentas_fecha"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/lv_see_cuentas_motivo"
        android:layout_below="@+id/lv_see_cuentas_fecha"
        android:layout_alignParentEnd="true" />
</RelativeLayout>